mixin contact-us__pic(modifier)
  picture.contact-us__pic&attributes(attributes)
    source(type='image/jpg' srcset=require('../../img/contact-us-min.jpg') media="(min-width: 1199px)")
    source(type='image/jpg' srcset=require('../../img/contact-us-laptop-min.jpg') media="(min-width: 760px)")
    source(type='image/jpg' srcset=require('../../img/contact-us-mobile-min.jpg') media="(min-width: 320px)")
    img(src=require('../../img/contact-us-mobile-min.jpg') alt="Человек держит телефон")
    

    