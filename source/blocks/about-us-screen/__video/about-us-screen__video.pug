mixin about-us-screen__video(modifier)
  video.about-us-screen__video(controls width="250" preload="none" poster=require('../../img/video-poster.jpg') )&attributes(attributes)
    source(src=require('../../img/video/forest-chopping.mp4') type="video/mp4" media="(min-width: 601px)")
    source(src=require('../../img/video/forest-choppingMobile.mp4') type="video/mp4" media="(max-width: 600px)")
      

    p!="Sorry, your browser doesn't support embedded videos."